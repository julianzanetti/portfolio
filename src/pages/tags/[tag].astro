---
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths(): Promise<{ params: { tag: string }, props: { posts: any[] } }[]> {
  const allPosts = await Astro.glob('../posts/*.md');

  return [
    {params: {tag: "aws"}, props: {posts: allPosts}},
    {params: {tag: "python"}, props: {posts: allPosts}},
    {params: {tag: "docker"}, props: {posts: allPosts}},
    {params: {tag: "kubernetes"}, props: {posts: allPosts}},
    {params: {tag: "django"}, props: {posts: allPosts}},
    {params: {tag: "web"}, props: {posts: allPosts}}
  ]
}

const { tag } = Astro.params;
const { posts } = Astro.props;
const filteredPosts = posts.filter((post) => post.frontmatter.tags?.includes(tag));
---
<BaseLayout pageTitle={tag}>
  <p>Entradas etiquetadas con {tag}</p>
  <ul>
    {filteredPosts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
  </ul>
</BaseLayout>