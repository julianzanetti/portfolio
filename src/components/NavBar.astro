---
import SocialIcons from './SocialIcons.jsx';
---

<nav class="sticky top-0 z-50 bg-[#0d0a2d] bg-opacity-80 backdrop-blur-md text-white shadow-md">
  <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
    
    <!-- Logo -->
    <div class="text-xl font-bold text-primary">
      <a href="/" class="font-bold text-primary hover:text-primary cursor-pointer">
        Julián Zanetti
      </a>
    </div>

    <!-- Menú Desktop -->
    <div class="hidden md:flex items-center gap-6 text-sm md:text-base font-medium">
      <a href="/" class="hover:text-primary transition">Home</a>
      <a href="/about" class="hover:text-primary transition">About Me</a>
      <a href="/projects" class="hover:text-primary transition">Projects</a>
      <a href="/courses" class="hover:text-primary transition">Courses</a>
    </div>

    <!-- Redes Sociales (centradas en mobile) -->
    <div class="flex items-center gap-4">
      <SocialIcons client:load />
      <!-- Botón burger (solo mobile) -->
      <button id="burger" class="md:hidden focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" 
          viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Menú Mobile -->
  <div id="mobileMenu" class="hidden flex-col bg-[#0d0a2d] px-6 pb-4 space-y-2 md:hidden">
    <a href="/" class="hover:text-primary transition block">Home</a>
    <a href="/about" class="hover:text-primary transition block">About Me</a>
    <a href="/projects" class="hover:text-primary transition block">Projects</a>
    <a href="/courses" class="hover:text-primary transition block">Courses</a>
  </div>
</nav>

<script>
  const burger = document.getElementById("burger");
  const mobileMenu = document.getElementById("mobileMenu");

  if (burger) {
    burger.addEventListener("click", () => {
      if (mobileMenu) {
        mobileMenu.classList.toggle("hidden");
      }
    });
  }
</script>

