---
import { getCollection } from 'astro:content';
const { showMoreButton = true } = Astro.props;

const projects = await getCollection('projects');

// Si querés ordenarlos por fecha (si usás `date` en el frontmatter):
// projects.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---
<section id="projects" class="bg-[#0d0a2d] text-white py-20 px-6">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-primary text-center mb-12">Proyectos</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(({ slug, data }) => (
        <div class="bg-[#1e1b4b] rounded-xl p-6 shadow-lg hover:scale-105 transition">
          <h3 class="text-xl font-bold mb-2 text-primary">{data.title}</h3>
          <p class="text-gray-300 mb-4 text-sm">{data.description}</p>
          <div class="flex flex-wrap gap-2 text-sm">
            {data.technologies?.map((tech) => (
              <span class="bg-[#0d0a2d] text-primary px-3 py-1 rounded-full">{tech}</span>
            ))}
          </div>
          <a
            href={`/projects/${slug}`}
            class="block mt-4 text-primary underline text-sm hover:text-[#a29bfe] transition"
          >
            Ver más
          </a>
        </div>
      ))}
    </div>
  </div>

  {showMoreButton && (
    <div class="text-center mt-12">
      <a
        href="/projects"
        class="inline-block bg-primary text-white px-6 py-3 rounded-md font-semibold hover:bg-[#a29bfe] transition"
      >
        Ver todos los proyectos
      </a>
    </div>
  )}
</section>
